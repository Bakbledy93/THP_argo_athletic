<h1 class="hidden">
  <%= title 'Récupérer compte' %>
</h1>

<h2>Forgot your password? Admin</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

<section class="py-0" id="page-signup">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-6 px-0">
              <div class="bg-holder"
                   data-zanim-trigger="scroll"
                   data-zanim-lg='{"animation":"zoom-out-slide-right","delay":0.4}'
                   style="background-image: url(<%= image_path 'key-image.png' %>)"
              >
              </div>
            </div>
            <div class="col-lg-6 bg-white py-6">
              <div class="row h-100 align-items-center justify-content-center">
                <div class="col-sm-8 col-md-6 col-lg-10 col-xl-8" data-zanim-xs='{"delay":0.5,"animation":"slide-right"}' data-zanim-trigger="scroll">
                  <h3 class="display-4 fs-2"> Parfait pour les compétiteurs amateurs,
                    <br/>professionnels &amp; autres sportifs.</h3>
                  <h6 class="text-danger mt-3"> Spécialement conçue pour les compétieurs pour leur préparation physique. </h6>
                  <form class="mt-5"> 
                    <div class="row mb-4">
                    <div class="col">
                    <%= f.email_field :email, class:"form-control border-300 bg-light", autofocus: true, placeholder: 'Votre email' %> 
                    </div>
                    </div>
                    <div class="row mb-4 align-items-center">
                      <div class="col-auto">
                      <%= f.submit :"Demander un nouveau mot de passe", class:"btn btn-dark btn-block mt-3", autofocus: true %>                       
                      </div>
                      <div class="col-sm">
                        <p class="fs--1 text-700 mb-0 text-sans-serif mt-2 mt-lg-0">Recevez la procédure par mail</p>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
<% end %>
</div></div>
</section>
