<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <section class="py-0" id="page-signin">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-6 px-0">
          <div class="sticky-top vh-lg-100 py-9">
            <div class="bg-holder" 
                 style="background-image:url(<%= 'https://images.pexels.com/photos/221210/pexels-photo-221210.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260' %>)" 
                 data-zanim-trigger="scroll" 
                 data-zanim-lg='{"animation":"zoom-out-slide-right"}'
            ></div>
          </div>
        </div>
        <div class="col-lg-6 bg-white py-6">
          <div class="row h-100 align-items-center justify-content-center">
            <div class="col-sm-8 col-md-6 col-lg-10 col-xl-8"
                 data-zanim-xs='{"animation":"slide-right"}'
                 data-zanim-trigger="scroll"
            >
            <h6 class="text-primary mt-3">
                  Connexion Admin
            </h6>
            <form class="mt-5">
              <div class="form-group">
                <%= f.email_field :email, class:"form-control border-300 bg-light", autofocus: true, placeholder: 'e-mail' %> 
              </div>
              <div class="form-group">
                <%= f.password_field :password, class:"form-control border-300 bg-light", autofocus: true, placeholder: 'mot de passe' %> 
              </div>
              <div class="form-group">
                <%= f.submit :"Connexion", class:"btn btn-dark btn-block mt-3", autofocus: true %> 
              </div>
              <div class="form-group mb-0">
               </div>
            </form>
            <%= render "admins/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
