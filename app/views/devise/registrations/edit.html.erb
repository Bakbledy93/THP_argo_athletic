<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<section class="py-0" id="page-signup">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-6 px-0">
              <div class="sticky-top vh-lg-100 py-9">
                <div class="bg-holder" style="background-image:url(https://images.pexels.com/photos/54326/runners-male-sport-run-54326.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260s);" 
                data-zanim-trigger="scroll" data-zanim-lg='{"animation":"zoom-out-slide-right","delay":0.4}'></div>
              </div>
            </div>
            <div class="col-lg-6 bg-white py-6">
              <div class="row h-100 align-items-center justify-content-center">
                <div class="col-sm-8 col-md-6 col-lg-10 col-xl-8" data-zanim-xs='{"delay":0.5,"animation":"slide-right"}' data-zanim-trigger="scroll">
                  <h3 class="display-4 fs-2">Perfect for Startups,
                    <br/>freelancers &amp; companies.</h3>
                  <h6 class="text-danger mt-3">Specially crafted for the people who care about design.</h6>
                  <form class="mt-5">
                    <div class="row mb-4">
                      <div class="col">
                    <%= f.text_field :first_name, class:"form-control border-300 bg-light", autofocus: true, placeholder: 'Votre prénom' %> 
                      </div>
                    </div>
                    <div class="row mb-4">
                    <div class="col">
                    <%= f.email_field :email, class:"form-control border-300 bg-light", autofocus: true, placeholder: 'Votre email' %> 
                    </div>
                    </div>
                    <div class="row mb-4">
                      <div class="col">
                      <%= f.password_field :password, class:"form-control border-300 bg-light", autofocus: true, placeholder: "********" %> 
                      </div>
                      <div class="col">
                        <%= f.password_field :password_confirmation, class:"form-control border-300 bg-light", placeholder: "********" %>
                      </div>
                    
                    <div class="row mb-4 align-items-center">
                      <div class="col-auto">
                      <%= f.submit :"Créer un compte", class:"btn btn-dark btn-block mt-3", autofocus: true %>                       
                      </div>
                      <div class="col-sm">
                        <p class="fs--1 text-700 mb-0 text-sans-serif mt-2 mt-lg-0">En validant votre compte, vous acceptez
                          <a class="text-black" href="#">nos conditions d'utilisation.</a>
                        </p>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>


<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

<% end %>