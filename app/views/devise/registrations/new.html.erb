<!-- title shown on tab -->
<h1 class="hidden">
  <%= title 'Inscription' %>
</h1>
<!-- sign up form -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <section class="py-0" id="page-signup">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-6 px-0">
            <div class="sticky-top vh-lg-100 py-9">
              <div class="bg-holder" 
                   style="background-image:url(<%= image_path 'sign-up-image.jpg' %>)" 
                   data-zanim-trigger="scroll"
                   data-zanim-lg='{"animation":"zoom-out-slide-right"}'
              ></div>
            </div>
          </div>
          <div class="col-lg-6 bg-white py-6">
            <div class="row h-100 align-items-center justify-content-center">
              <div class="col-sm-8 col-md-6 col-lg-10 col-xl-8"
                   data-zanim-xs='{"animation":"slide-right"}'
                   data-zanim-trigger="scroll"
              >
              <div class="card text-center border-light">
                <h2 class="display-4 fs-2 card-title">
                  Argo Athletic
                  <hr class="special-black-border striped-border">
                  Inscription
                </h2>
                <h6 class="text-danger mt-3">
                  Inscris-toi pour commencer ta pr√©paration physique sans plus tarder. 
                </h6>
                <div class="form-group">
                <div class="field <% if resource.errors[:email].present? %>error<% end %>">
                  <%= f.label :email, "E-mail" %><em class="required-label">*</em>
                  <%= f.email_field :email, class:"form-control border-300 bg-light", autofocus: true, placeholder: 'e-mail', pattern: '[^@]+@[^@]+\.[a-zA-Z]{2,6}', required: true %> 
                </div>
              </div>
             <div class="form-group">
                <div class="field <% if resource.errors[:password].present? %>error<% end %>">
                  <%= f.label :password, "Mot de passe" %><em class="required-label">*</em>                
                  <%= f.password_field :password, class:"form-control border-300 bg-light", placeholder: 'mot de passe', required: true %> 
                </div>
                <div class="field <% if resource.errors[:password].present? %>error<% end %>">
                  <%= f.label :password_confirmation, "Confirmer mot de passe" %><em class="required-label">*</em>                
                  <%= f.password_field :password, class:"form-control border-300 bg-light", placeholder: 'mot de passe', required: true %> 
                </div>
              </div>
              <%= f.submit :"Inscription", class:"btn btn-danger btn-block mt-3" %> 
              <p class="fs--1 text-700 mb-0 text-sans-serif mt-2 mt-lg-0">
                En validant votre compte, vous acceptez
              </p>
              <p class="fs--1 text-700 mb-0 text-sans-serif mt-2 mt-lg-0">
                <%= link_to "nos conditions d'utilisation", 
                    terms_home_index_path,
                    method: :get
                %>
              </p>
            </div>
            <!-- links to other forms -->
            <%= render "devise/shared/links" %>
      </div>
    </div>
  </section>
<% end %>
