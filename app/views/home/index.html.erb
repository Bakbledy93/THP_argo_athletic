  <h1 class="hidden">
    <%= title 'Accueil' %>
  </h1>
  <!-- main -->
  <main class="main min-vh-100" id="top">
    <!-- section landing-header -->
    <section class="py-0" id="landing-features">
      <div class="container-fluid">
        <div class="row" data-zanim-timeline="{}" data-zanim-trigger="scroll">
          <div class="col-lg-6 px-0">
            <div class="h-100 py-9" data-zanim-lg='{"animation":"slide-right","from":{"opacity":1},"delay":0.4}' data-zanim-trigger="scroll">
              <!-- first background image -->
              <div class="bg-holder"
                  data-zanim-trigger="scroll" data-zanim-lg='{"animation":"slide-right","delay":0}'
                  style="background-image: url(<%= image_path 'index-image-top.png' %>)">
              </div>
            </div>
          </div>
          <!-- presentation of the title of the application -->
          <div class="col-lg-6">
            <div class="row align-items-center justify-content-center py-6 py-md-8">
              <div class="col-11 col-sm-10">
                <div class="overflow-hidden">
                  <!-- title of the application -->
                  <h1 class="text-uppercase fs-3 fs-lg-4" data-zanim-lg='{"delay":0.4}'>
                    Argo Athletic
                  </h1>  
                  <h3 class="font-weight-black" data-zanim-lg='{"delay":0.4}' > 
                    L'application de Performance Training.
                  </h3>
                </div>
                <!-- presentation of the description of the application -->
                <div class="overflow-hidden">
                  <!-- description of the application -->
                  <p class="lead text-sans-serif font-weight-normal pr-xl-9 mt-4 text-500" data-zanim-lg='{"delay":0.5}'>
                  Ton sport. Tes objectifs. Notre engagement. 
                  </p>
                  <p class="lead text-sans-serif font-weight-normal pr-xl-9 mt-4 text-500" data-zanim-lg='{"delay":0.5}'>
                    Entraîne-toi avec Argo Athletic et progresse dans ton sport avec des programmes construits automatiquement autour de tes objectifs !
                  </p>
                </div>
                <% if !user_signed_in? %>
                  <!-- presentation of options of authentification -->
                  <div class="overflow-hidden">
                    <div class="mt-3 mt-lg-5" data-zanim-xs='{"delay":0.6}'>
                      <!-- sign up option -->
                      <%= button_to "Inscrivez-vous", new_user_registration_path, method: 'get', class:"btn btn-danger btn-lg"%>
                      <h6 class="font-weight-normal mt-2 text-500">
                        Déjà membre ?
                      </h6>
                      <!-- sign in option -->
                      <%= button_to "Connexion", new_user_session_path, method: 'get', class:"btn btn-danger d-inline btn-lg" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- section landing-singup -->
    <section class="text-center bg-light" id="landing-signup">
      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-8" data-zanim-timeline="{}" data-zanim-trigger="scroll">
            <div class="overflow-hidden">
              <h4 class="font-weight-bold mb-3" data-zanim-xs='{"delay":0.2}'>
                Entrainements 100% personnalisés et automatiques!
              </h4>
            </div>
            <div class="overflow-hidden">
              <p class="lead text-sans-serif font-weight-normal text-500" data-zanim-xs='{"delay":0.3}'>
                Gagner en force, en explosivité ou tout simplement être plus endurant.<br><br>
                Argo Athletic t'offre les moyens d'atteindre tes objectifs avec des programmes totalement personnalisés.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section  class="overflow-hidden bg-light " 
              id="landing-features-1"
              style="background-image: url(<%= image_path 'background-index-image.png' %>)">
       <div class="container">
        <div class="row align-items-center">
          <div class="col-md-7">
            <div class="row bg-white rounded py-7 py-xl-9 px-5 px-md-0 text-sans-serif">
              <div class="col-lg-6 px-lg-6 pt-6 pt-lg-0" data-zanim-timeline='{"delay":0.2}' data-zanim-trigger="scroll">  </div>
               <div class="container text-center">
                 <div data-zanim-xs='{"delay":0.1,"animation":"zoom-in"}'>
                   <%= image_tag("argo-logo.png", class: "rounded-soft img-fluid", alt: "logo officiel d'argo athletic") %>
                 </div>
                  <h3>Offre à seulement 2,5€ la semaine !</h3>
                      <p class="fancy-feature">Programme personnalisé</p>
                      <p class="fancy-feature">Exercices illimités</p>
                      <p class="fancy-feature">Nutrition sportive</p>
                      <p class="fancy-feature">Récupération</p>
                    <%= button_to "Inscription", new_user_registration_path, method: 'get', class:"btn btn-danger btn-lg" %>
                  </div>
                </div>
              </div> 
            </div>
        <div class="position-md-absolute r-0 t-0 parallax w-md-50" data-rellax-speed="5" data-rellax-percentage="0.5">
            <%= image_tag 'append-background-image.png', 
                class: "shadow-lg rounded img-fluid" 
            %>
        </div>
      </div> 
    </section>
    <section class="py-3" id="landing-features">
      <div class="container-fluid">
        <div class="row" data-zanim-timeline="{}" data-zanim-trigger="scroll">
          <!-- first card -->
          <div class="col-lg-6 col-xl-3 mt-3 mt-xl-0 pr-lg-2" data-zanim-xs='{"delay":0.1,"animation":"zoom-in"}'>
            <div class="hoverbox min-vh-50 h-100 py-6">
              <!-- fourth background image -->
              <div class="bg-holder rounded"
                  style="background-image: url(<%= image_path 'first-card-index.png' %>)"
              >
              </div>
              <div class="hoverbox-content d-flex bg-black justify-content-center rounded">
                <div class="align-self-center px-4 px-lg-6 text-center">
                  <span class="fa fa-signal text-white fs-2 mb-2">
                  </span>
                  <h4 class="mb-1 text-white">
                    Performance Training
                  </h4>
                  <p class="px-3 text-sans-serif text-500">
                    Concentre-toi sur l'essentiel. Des plans d'entraînements spécifiquement conçus en fonction de tes objectifs et exigences.
                  </p>
                  <div>
                    <%= button_to "Inscription", new_user_registration_path, method: 'get', class:"btn btn-danger" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- second card -->
          <div class="col-lg-6 col-xl-3 mt-3 mt-xl-0 px-xl-2 pl-lg-2" data-zanim-xs='{"delay":0.1,"animation":"zoom-in"}'>
            <div class="position-relative hoverbox min-vh-50 h-100">
              <!-- fifth background image -->
              <div class="bg-holder rounded"
                style="background-image: url(<%= image_path 'second-card-index.png' %>)"
              >
              </div>
              <div class="hoverbox-content d-flex bg-black justify-content-center rounded">
                <div class="align-self-center px-4 px-lg-6 text-center">
                  <span class="fa fa-clipboard-check text-white fs-2 mb-2">
                  </span>
                  <h4 class="mb-1 text-white">
                    Fitness Testing - en développement
                  </h4>
                  <p class="px-3 text-sans-serif text-500">
                    S'évaluer facilement. Connaitre ses forces et les points à améliorer.
                  </p>
                  <div>
                    <%= button_to "Inscription", new_user_registration_path, method: 'get', class:"btn btn-danger" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- third card -->
          <div class="col-lg-6 col-xl-3 mt-3 mt-xl-0 px-xl-2 pr-lg-2" data-zanim-xs='{"delay":0.3,"animation":"zoom-in"}'>
            <div class="position-relative hoverbox min-vh-50 h-100 py-6 d-flex justify-content-center">
              <!-- sixth background image -->
              <div class="bg-holder rounded"
                style="background-image: url(<%= image_path 'third-card-index.png' %>)"
              >
              </div>
              <div class="hoverbox-content d-flex bg-black justify-content-center rounded">
                <div class="align-self-center px-4 px-lg-6 text-center">
                  <span class="fa fa-chart-line text-white fs-2 mb-2">
                  </span>
                  <h4 class="mb-1 text-white">
                    Tracking and Analysis - en développement
                  </h4>
                  <p class="px-3 text-sans-serif text-500">
                    Chaque détail à son importance. Suis ta progression et mesures tes efforts tout au long du programme.
                  </p>
                  <div>
                    <%= button_to "Inscription", new_user_registration_path, method: 'get', class:"btn btn-danger" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- fourth card -->
          <div class="col-lg-6 col-xl-3 mt-3 mt-xl-0 pl-lg-2" data-zanim-xs='{"delay":0.4,"animation":"zoom-in"}'>
            <div class="position-relative hoverbox min-vh-50 h-100 py-6">
              <!-- sixth background image -->
              <div class="bg-holder rounded"
                style="background-image: url(<%= image_path 'fourth-card-index.png' %>)"
              >
              </div>
              <div class="hoverbox-content d-flex bg-black justify-content-center rounded">
                <div class="align-self-center px-4 px-lg-6 text-center">
                  <span class="fa fa-globe-europe text-white fs-2 mb-2">
                  </span>
                  <h4 class="mb-1 text-white">
                    360° XP - en développement
                  </h4>
                  <p class="px-3 text-sans-serif text-500">
                    La performance au coeur des fonctionnalités d'Argo Athletic : MindSet, Sport Nutrition, Rehab Ex..
                  </p>
                  <div>
                    <%= button_to "Inscription", new_user_registration_path, method: 'get', class:"btn btn-danger" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- section landing-banner -->
    <section class="py-0 overflow-hidden" id="landing-banner">
      <div class="container-fluid">
        <div class="row">
          <div class="col px-3" data-zanim-timeline="{}" data-zanim-trigger="scroll">
            <div class="position-relative overflow-hidden rounded">
              <!-- second background image -->
              <div class="bg-holder overlay parallax rounded"
                data-zanim-trigger="scroll" data-rellax-percentage="0.5"
                style="background-image: url(<%= image_path 'second-background-index.png' %>)"
              >
              </div>
              <!-- promoting the app and remind for sign up -->
              <div class="position-relative py-11 px-3 px-lg-9">
                <h1 class="text-white fs-2 fs-sm-4 fs-md-5 parallax display-4" data-rellax-percentage="0.5" data-rellax-speed="2">
                  <span class="d-block overflow-hidden">
                    <span class="d-inline-block" data-zanim-xs='{"delay":0.1}'>
                      Deviens la meilleure 
                    </span>
                  </span>
                  <span class="d-block overflow-hidden">
                    <span class="d-inline-block" data-zanim-xs='{"delay":0.2}'>
                      version de toi-même.
                    </span>
                  </span>
                  <span class="d-block overflow-hidden">
                    <span class="d-inline-block" data-zanim-xs='{"delay":0.3}'>
                      Argo Athletic
                    </span>
                    <!-- secondary button for sign up -->
                    <div>
                      <%= button_to "Inscrivez-vous", new_user_registration_path, method: 'get', class:"btn btn-danger btn-lg "%>
                    </div>
                  </span>
                </h1>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="py-8" id="landing-download">
      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7 text-center text-md-left">
            <h2 class="font-weight-black">
              L'Argo app sera bientôt disponible sur
            </h2>
          </div>
          <!-- app store and google play icons -->
          <%= image_tag ("play-app-store.png") %>
        </div>
      </div>
    </section>
  </main>
