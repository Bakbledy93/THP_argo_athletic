        <div class="bg-holder overlay overlay-0"
        style="background-image: url(<%= image_path 'footer-image.png' %>)"
        >
        </div>
        <div class="container">
          <div class="row align-items-center justify-content-center">
            <div class="col-lg-6">
              <h1 class="font-weight-black text-white mb-0">
                Argo
                <span class="font-weight-light">
                  Athletic
                </span>
              </h1>
            </div>
            <div class="col-lg-6 mt-4 mt-lg-0">
              <div class="row text-nowrap">
                <div class="col-sm-auto">
                  <ul class="pl-0 bullet-inside text-sans-serif font-weight-normal mb-0 text-300">
                    <li>
                      Prépa sur mesure
                    </li>
                    <li>
                      Optimiser vos performances
                    </li>
                    <li>
                      Booster votre forme
                    </li>
                    <li>
                      PPG ou PPS
                    </li>
                  </ul>
                </div>
                <div class="col">
                  <ul class="pl-0 bullet-inside text-sans-serif font-weight-normal mb-0 text-300">
                    <li>
                      Fidélité récompensée
                    </li>
                    <li>
                      Méthode et formation
                    </li>
                    <li>
                      50000 sportifs préparés
                    </li>
                    <li>
                      Force et Honneur
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 overflow-hidden text-center border-top border-bottom border-900 py-4 mt-5">
              <div data-zanim-xs='{"delay":0.1,"from":{"opacity":0,"letter-spacing":"0.8em"},"to":{"letter-spacing":"0.2em","opacity":1}}' data-zanim-trigger="scroll">
                <!-- contact link -->
                <%= link_to "Nous contacter", 
                    contact_home_index_path,
                    class: "text-sans-serif text-uppercase text-warning font-weight-black fs-1",
                    method: :get
                %>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="footer bg-black text-600 py-4 text-sans-serif text-center overflow-hidden" data-zanim-timeline="{}" data-zanim-trigger="scroll">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-lg-4 order-lg-2">
              <div class="indicator indicator-up" data-fancyscroll="data-fancyscroll">
                <%= link_to "Haut", 
                    "#top",
                    class: "on-top fs--1 text-uppercase ls font-weight-bold mb-0"
                %>
                <span class="indicator-arrow indicator-arrow-one" 
                      data-zanim-xs='{"from":{"opacity":0,"y":15},"to":{"opacity":1,"y":-5,"scale":1},"ease":"Back.easeOut","duration":0.4,"delay":0.9}'
                >
                </span>
                <span class="indicator-arrow indicator-arrow-two" 
                      data-zanim-xs='{"from":{"opacity":0,"y":15},"to":{"opacity":1,"y":-5,"scale":1},"ease":"Back.easeOut","duration":0.4,"delay":1.05}'
                >
                </span>
              </div>
            </div>
            <div class="col-lg-4 text-lg-left mt-4 mt-lg-0">
              <!-- copyright mention -->
              <p class="fs--1 text-uppercase ls font-weight-bold mb-0">
                Copyright &copy; Argo Athletic&trade;
                <!-- hidden link to admin new session path -->
                <%= link_to "inc.", 
                    new_admin_session_path,
                    class: "text-600",
                    method: :get
                %>
              </p>
            </div>
            <div class="col-lg-4 text-lg-right order-lg-2 mt-2 mt-lg-0">
              <p class="fs--1 text-uppercase ls font-weight-bold mb-0">
                Fait avec
                <span class="text-danger fas fa-heart mx-1">
                </span>
                par des
                <!-- easter egg: Spartiates is a link to a 300 youtube video --> 
                <%= link_to "Spartiates", "https://www.youtube.com/watch?v=7qOO2WASRHc",
                    class: "text-600"
                %>
              </p>
            </div>
          </div>
        </div>
      </section>
    </footer>
