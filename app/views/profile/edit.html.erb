<h1 class="hidden">
  <%= title 'Paramètres profil' %>
</h1>
<%= form_for @profile, url: user_profile_path do |f| %>
    <section class="py-0" id="page-signup">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-6 px-0">
            <div class="sticky-top vh-lg-100 py-9">
              <div class="bg-holder" 
                   style="background-image:url(<%= image_path 'https://images.pexels.com/photos/186076/pexels-photo-186076.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260' %>)" 
                   data-zanim-trigger="scroll"
                   data-zanim-lg='{"animation":"zoom-out-slide-right"}'
              ></div>
            </div>
          </div>
          <div class="col-lg-6 bg-white py-6">
            <div class="row h-100 align-items-center justify-content-center">
              <div class="col-sm-8 col-md-6 col-lg-10 col-xl-8"
                   data-zanim-xs='{"animation":"slide-right"}'
                   data-zanim-trigger="scroll"
              >
                <h3 class="display-4 fs-2">
        
                </h3>
           
              <form class="mt-5">
                <div class="row mb-4">
                  <div class="col">
                    <%= f.text_field :first_name,
                        class:"form-control border-300 bg-light",
                        autofocus: true,
                        placeholder: 'prénom' 
                    %> 
                  </div>
                </div>

                <div class="row mb-4">
                  <div class="col">
                    <%= f.text_field :last_name,
                        class:"form-control border-300 bg-light",
                        autofocus: true,
                        placeholder: 'nom' 
                    %> 
                  </div>
                </div>
                <div class="row mb-4">
                  <div class="col">date de naissance
                      <%= f.date_field :date_of_birth, as: :date, 
                        class:"form-control border-300 bg-light",
                        autofocus: true,
                        placeholder: 'date de naissance' 
                    %> 
                  </div>
                </div>
                <div class="row mb-4">
                  <div class="col">Votre poids
                        <%= f.text_field :weight, 
                        class:"form-control border-300 bg-light",
                        placeholder: "Votre poids" 
                    %> 
                  </div></div>
                  <div class="row mb-4">
                  <div class="col">Choix du sport
                      <%= f.select :sport, @sports_array, 
                        class:"form-control border-300 bg-light",
                        placeholder: "Choix du sport"
                    %>
                  </div></div>
                  <div class="row mb-4">
                  <div class="col">Choix du poste
                      <%= f.select :sport_role, @roles_array, 
                        class:"form-control border-300 bg-light",
                        placeholder: "Choix du poste"
                    %> 
                  </div></div>

                </div>  
                <div class="row mb-4 align-items-center">
                  <div class="col-auto">
                    <%= f.submit :"Confirmer vos données",
                        class:"btn btn-dark btn-block mt-3",
                        autofocus: true 
                    %>                      
                  </div>
                  <div class="col-sm">
                    <p class="fs--1 text-700 mb-0 text-sans-serif mt-2 mt-lg-0">
                      En validant votre compte, vous acceptez nos conditions d&rsquo;utilisation.
                    </p>
                  </div>
                </div>
              </form>
              
            </div>
          </div>
        </div>
      </div>


  





    </section>
<% end %>
