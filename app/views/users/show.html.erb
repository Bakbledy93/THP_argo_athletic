 <section class="py-0" id="page-shop" data-zanim-xs='{"delay":0.4,"animation":"zoom-out"}' data-zanim-trigger="scroll">

  <div class="bg-holder" style="background-image:url(https://images.pexels.com/photos/4429141/pexels-photo-4429141.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260);"></div>

  <div class="container">
    <div class="row">
      <div class="col-9 pt-11 pb-5">
          <%= image_tag("argo-logo.png", class: "logodash", alt: "logo officiel d'argo athletic")%>  
          <div class="media-body pl-3">
            </div>
              <p class="titred3" class="mb-0 text-white ls-2 text-uppercase" data-zanim-xs='{"delay":0.8}' data-zanim-trigger="scroll">Bienvenue dans votre Dashboard</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>
<br>
    <div class="fancy-tab">
	<div class="nav-bar nav-bar-center">
		<div class="nav-bar-item active"><span class="fas fa-home fs-2"></span><br>Home</div>
		<div class="nav-bar-item"><span class="fas fa-user fs-2"></span><br>Profil</div>
	</div>

	<div class="tab-contents">
		<div class="tab-content active">

    <div class="container mb-4">

      <div class="card">
            <img class="rounded-soft img-fluid" src="https://images.pexels.com/photos/1030794/pexels-photo-1030794.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" 
            alt="" data-zanim-xs='{"delay":0.1,"animation":"zoom-in"}' />
        <div class="card-body">
          <h5 class="card-title">VOTRE PROGRAMME</h5>
              <p data-zanim-xs='{"delay":0.3}'>Créer ton programme personnalisé et améliore ta préparation physique</p>
                <%if current_user.sub_id.present?%>
                    <% if @exist_program == true %>
                      <%= link_to "voir mon Programme", workout_programs_path, class:"btn btn-danger btn-sm mb-3"%>
                      <%= link_to "Suprimer  Programme", workout_program_path, method: 'delete', class:"btn btn-dark btn-sm"%>
                    <% else %>
                      <%if current_user.profile.sport_role.nil? && current_user.profile.level.nil? %>
                        <div><%= link_to "Créer mon Programme", edit_user_profile_path(id: @profile, user_id: @id), class:"btn btn-danger btn-sm"%></div><br>
                      <%else%>
                        <div><%= link_to "Créer mon Programme", new_workout_program_path, class:"btn btn-danger btn-sm"%></div><br>
                      <%end%>
                    <%end%>
                <%else%>
                  <div> <%= link_to "S'abonner pour créer mon programmme", success_charges_path, class:"btn btn-danger btn-sm"%></div><br>
                <%end%>
        </div>
        <div class="d2">
          <small class="text-muted">Last updated 3 mins ago</small>
        </div>
      </div>
      

    </div>

		</div>
		<div class="tab-content">
    <div class="container mb-4">
      <div class="row mb-4">

            <div class="col-sm-8">
            <div class="card">
              <div class="d3">
              <p class="titred3">PROFILE SPORT</p>
              </div>
              <div class="card-body">
                <p>Sport :
                <%unless current_user.profile.sport.nil?%>
                <%=current_user.profile.sport.humanize %>
                <%else%>
                <span class="font-italic">Renseignes ton profil</span>
                <%end%>
                </p>

                <p>Poste :
                <%unless current_user.profile.sport_role.nil?%>
                <%=current_user.profile.sport_role.humanize %>
                <%else%>
                <span class="font-italic">Renseignes ton profil</span>
                <%end%>
                </p>


                <p>Taille :
                <%unless current_user.profile.height.nil?%>
                <%=current_user.profile.height%> cm
                <%else%>
                <span class="font-italic">Renseignes ton profil</span>
                <%end%>
                </p>

                <p>Poids :
                <%unless current_user.profile.weight.nil?%>
                <%=current_user.profile.weight%> kg
                <%else%>
                <span class="font-italic">Renseignes ton profil</span>
                <%end%>
                </p>

                <p>Niveau :
                <%unless current_user.profile.level.nil?%>
                <%=current_user.profile.level.humanize %>
                <%else%>
                <span class="font-italic">Renseignes ton profil</span>
                <%end%>
                </p>

              </div>
            </div>
          </div>

          <div class="col-sm-4">
            <div class="card" style="width: 18rem;">
              <div class="d3">
                <p class="titred4">COMPTEUR</p>
              </div>
              <div class="card-body text-center">
                <h1 class="card-title text-center"><span data-countup="659">0</span></h1>
                <p>Entrainements effectués</p>
                <h1 class="card-title text-center"><span data-countup="1350">0</span></h1>
                <p>Kilomètres parcourus</p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm">

            <div class="card" style="width: 18rem;">
              <div class="d3">
                <p class="titred4">EDITER PROFIL SPORT</p>
              </div>
              <div class="card-body text-center">
                <%= link_to "Modifier son profil sport", edit_user_profile_path(id: @profile, user_id: @id), class:"btn btn-danger btn-sm"%>
              </div>
            </div>

          </div>
          <div class="col-sm">
          
            <div class="card" style="width: 18rem;">
              <div class="d3">
                <p class="titred4">EDITER COMPTE UTILISATEUR</p>
              </div>
              <div class="card-body text-center">
                <%= link_to "Modifier son compte utilisateur", edit_user_registration_path, class:"btn btn-danger btn-sm"%>
              </div>
            </div>
          
          </div>
          <div class="col-sm">

            <div class="card" style="width: 18rem;">
              <div class="d3">
                <p class="titred4">DECONNEXION</p>
              </div>
              <div class="card-body text-center">
                <%= link_to "Déconnexion", destroy_admin_session_path, method: 'delete', class:"btn btn-danger btn-sm"%>
              </div>
            </div>
          
          </div>
        </div>
      </div>
    </div>
	</div>
</div>







