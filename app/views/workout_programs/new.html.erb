<h1 class="hidden">
  <%= title 'Ajouter Programmes' %>
</h1>
<h1>WorkoutPrograms#new</h1>
<p>Find me in app/views/workout_programs/new.html.erb</p>

<h3>Add WorkoutPrograms</h3>
<%= form_with(model: @workout_program, local:true, class:"mt-5") do |form| %>
  <div class="row mb-4">
    <div class="col">
      <p>Profile Id: <%= @profile.id %></p>
      <p>User Id: <%= @user.id %></p>
      <%= form.hidden_field :profile_id, value: @profile.id.to_i %>
    </div>
  </div>

  <div class="form-group">
    <h4>First Name: <%= @profile.first_name %> <%= @profile.last_name %> </h4>
  
    <p><b>Sport: </b><%= @profile.sport %></p>
    <p><b>Role: </b><%= @profile.sport_role %></p>

    <%# Form data %>
    <p>
      <b>Level: </b>
      <%= form.select :level, @levels_name_arr %>
    </p>
    <p>
      <b>Muscular Group: </b>
      <%= @mg.name %>
    </p>
    <p>
      <b>Quality: </b>
      <%= @cap.name %>
    </p>
    <p>
    <b>Capacity: 
      </b><%= @qual.name %>
      </p>
    <p>
      <b>Training Method / Exercises: </b>
    </p>

    <h5>
      <b>* Training Method : </b>
      <%= form.hidden_field :training_method, value: @training_methods.sample.name %>
      <%= @training_methods.sample.name %>
    </h5>
    <h5>
      <b>* Exercises : </b>
      <%= form.hidden_field :exercise, value: @exercises_arr %>
    </h5>
        <h5>
      <b>* Variants : </b>
      <%= form.hidden_field :repetition, value: @variants_arr %>
    </h5>

    <%# exercise.split(" ")## %>
    
    <% i = 0 %>
    <% until i >= @exercises_arr.length do %>
      <p><b>+ Exercises: </b><%= @exercises_arr[i] %></p>
      <p><b>~~ Variant: </b><%= @variants_arr[i] %></p>
      <% i += 1 %>
    <% end %>
  </div>
  <br>
  <%= form.submit 'New Program', :class => 'btn btn-info m-5' %>
<% end %>